	<script type="text/javascript">
		function mapinitialize() {
			var myLatlng = new google.maps.LatLng({{ site.google_maps.ll }});
			var myOptions = {
				zoom: {{ site.google_maps.z ?: 16 }},
				center: myLatlng,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			}
			var map = new google.maps.Map(document.getElementById("map"), myOptions);

			var marker = new google.maps.Marker({
				position: myLatlng,
				map: map,
				title:"{{ site.name | escape('js') }}"
			});

		}
		(function($){$(window).load(mapinitialize);})(jQuery);//mapinitialize();
	</script>
{% endif %}
